<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:scrollbars="none"
    tools:context=".StartEventActivity"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="#3A3C3F"/>
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_background"
            android:backgroundTint="#F2F2F5"
            android:textSize="@dimen/_11ssp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:hint="Enter event name"
            android:textColorHint="#9E000000"
            android:layout_marginBottom="@dimen/_20sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Date"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="#3A3C3F"/>
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_background"
            android:backgroundTint="#F2F2F5"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:hint="MM/DD/YYYY"
            android:textColorHint="#424D59"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Days"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="#3A3C3F"/>
        <EditText
            android:id="@+id/editTextNumberOfDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_background"
            android:backgroundTint="#F2F2F5"
            android:padding="@dimen/_10sdp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:hint="Enter number of days"
            android:textColorHint="#424D59"
            android:layout_marginBottom="@dimen/_20sdp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Brief"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="#3A3C3F"/>

        <EditText
            android:id="@+id/editTextBrief"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/radius_background"
            android:backgroundTint="#F2F2F5"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:padding="@dimen/_10sdp"
            android:hint="Enter event brief"
            android:gravity="start"
            android:textColorHint="#424D59"
            android:layout_marginBottom="@dimen/_20sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D design link"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="#3A3C3F"/>
        <EditText
            android:id="@+id/editTextThreeDDesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_background"
            android:backgroundTint="#F2F2F5"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:padding="@dimen/_10sdp"
            android:hint="Enter 3d design link"
            android:textColorHint="#424D59"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DWG link"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="#3A3C3F"/>
        <EditText
            android:id="@+id/editTextDWG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_background"
            android:backgroundTint="#F2F2F5"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:padding="@dimen/_10sdp"
            android:hint="Enter DWG link"
            android:textColorHint="#424D59"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center">
            <TextView
                android:id="@+id/bu_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="#B4000000"
                android:textSize="@dimen/_15ssp"
                android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_gravity="center"
                app:cardElevation="0dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/_45sdp"
                    android:layout_marginEnd="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_7sdp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>