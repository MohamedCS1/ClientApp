<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                >
                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/logo_white"/>

            </LinearLayout>
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_100sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person"
                android:drawableTint="@color/white"
                android:drawablePadding="@dimen/_5sdp"
                android:backgroundTint="@color/yellow"
                android:textColorHint="#80FFFFFF"
                android:textColor="@color/white"
                android:hint="Email"/>


            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock"
                android:drawableTint="@color/white"
                android:drawablePadding="@dimen/_5sdp"
                android:backgroundTint="@color/yellow"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColorHint="#80FFFFFF"
                android:hint="Password"/>
            <TextView
                android:id="@+id/textViewError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#d05762"
                android:text="Incorrect password"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"/>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/buttonLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#21242c"
            app:cardCornerRadius="@dimen/_20sdp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            app:cardElevation="@dimen/_3sdp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_45sdp"
                android:layout_marginEnd="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First time here?"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buttonSingUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SingUp"
                android:textColor="#9ebdc8"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp">
            <View
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_change_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or connect using"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <View
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/buttonGoogle"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_google"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>